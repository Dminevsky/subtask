<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>parent_id</th>
      <th>child_ids</th>
      <th>CHECKED!</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr id="<%= task.id %>">
        <td><%= task.id %></td>
        <td><%= task.name %></td>
        <td><%= task.parent_id %></td>
        <td><%= task.child_ids %></td>
        <td><%= task.checked %></td>
        <td><%= link_to 'Check', check_task_path(task) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
